# MySQL Optimization Configuration for ButcherPro on XAMPP
# Copy these settings to your my.cnf or my.ini file in XAMPP

[mysqld]
# Basic Settings
default-storage-engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Memory Settings (Optimized for XAMPP)
key_buffer_size = 256M
query_cache_size = 128M
query_cache_type = 1
query_cache_limit = 2M

# InnoDB Settings
innodb_buffer_pool_size = 512M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Connection Settings
max_connections = 150
max_connect_errors = 10000
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

# Query Optimization
tmp_table_size = 64M
max_heap_table_size = 64M
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
join_buffer_size = 2M

# Table Settings
table_open_cache = 4000
table_definition_cache = 2000

# Logging (Disable for performance)
general_log = 0
slow_query_log = 1
slow_query_log_file = "C:/xampp/mysql/data/slow.log"
long_query_time = 2

# Binary Logging (Disable for development)
log-bin = OFF

# Performance Schema (Disable for development)
performance_schema = OFF

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
